{
  "name": "turntable",
  "version": "0.0.1",
  "description": "Backend for the openrecord platform.",
  "scripts": {
    "start": "serverless offline",
    "test": "NODE_ENV=test jest 'src/test/unit|src/test/integration'",
    "test:unit": "NODE_ENV=test jest 'src/test/unit'",
    "test:integration": "NODE_ENV=test jest 'src/test/integration'",
    "test:circleci": "npm run -s test -- --ci --coverage",
    "db:setup": "bin/database/setupDatabase.js",
    "db:sync": "bin/database/synchronizeDatabase.js",
    "docker:push": "docker/turntable/build_tag_push.sh",
    "deploy:staging": "npm install && AWS_PROFILE=turntable-deploy serverless deploy -s staging",
    "deploy:docker": "bin/deploy_with_docker.sh",
    "init": "npm run -s db:setup && npm run -s db:sync"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openrecord/turntable.git"
  },
  "author": "chasdeveas@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/openrecord/turntable/issues"
  },
  "homepage": "https://github.com/openrecord/turntable#readme",
  "devDependencies": {
    "faker": "^4.1.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.1",
    "nodemon": "^1.18.1",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "serverless": "^1.30.3",
    "serverless-offline": "^3.21.1",
    "testdouble": "^3.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "argon2": "^0.19.3",
    "boom": "^7.2.0",
    "config": "^1.30.0",
    "cors": "^2.8.4",
    "fastify": "^1.4.0",
    "fastify-boom": "^0.1.0",
    "fastify-cookie": "^2.0.1",
    "fastify-swagger": "^0.12.0",
    "glob": "^7.1.2",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.10",
    "mysql2": "^1.6.1",
    "serverless-api-cloudfront": "^0.9.4",
    "typeorm": "^0.2.5",
    "winston": "^2.4.2"
  },
  "nodemonConfig": {
    "delay": "2500ms",
    "watch": [
      "src"
    ],
    "execMap": {
      "js": "npm start",
      "yml": "npm start"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "./src/test/setup"
  },
  "jest-junit": {
    "output": "test-reports/junit.xml"
  }
}
