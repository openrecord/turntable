{
  "name": "turntable",
  "version": "0.0.1",
  "description": "Backend for the openrecord platform.",
  "scripts": {
    "start": "serverless offline --host 0.0.0.0",
    "test": "NODE_ENV=test jest 'src/test/unit|src/test/integration'",
    "test:unit": "NODE_ENV=test jest 'src/test/unit'",
    "test:integration": "NODE_ENV=test jest 'src/test/integration'",
    "test:circleci": "npm run -s test -- --ci --coverage",
    "db:setup": "bash bin/database/setup_database.sh",
    "db:sync:test": "NODE_ENV=test node bin/database/synchronizeDatabase",
    "deploy": "AWS_PROFILE=chas-aws sls deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openrecord/turntable.git"
  },
  "author": "chasdeveas@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/openrecord/turntable/issues"
  },
  "homepage": "https://github.com/openrecord/turntable#readme",
  "devDependencies": {
    "faker": "^4.1.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "serverless": "^1.27.3",
    "serverless-offline": "^3.21.1",
    "testdouble": "^3.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "bcrypt": "^2.0.1",
    "config": "^1.30.0",
    "cors": "^2.8.4",
    "fastify": "^1.4.0",
    "fastify-register-routes": "^1.1.2",
    "fastify-swagger": "^0.12.0",
    "glob": "^7.1.2",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.10",
    "mysql2": "^1.5.3",
    "typeorm": "^0.2.5",
    "winston": "^2.4.2"
  }
}
